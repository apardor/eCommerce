{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "es2016",                                  
    "outDir": "dist",
    "lib": ["esnext"],
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": false,                                      
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types/express"]
                               
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",

}
}
